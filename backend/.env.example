# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME
# OR use individual variables:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multibroadcast
DB_USER=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/youtube.readonly https://www.googleapis.com/auth/youtube.upload

# Storage
MEDIA_STORAGE_PATH=/var/media
DOWNLOAD_BASE_URL=http://localhost:3000

# RTMP
RTMP_PORT=1935
RTMP_CHUNK_SIZE=60000
RTMP_GOP_CACHE=true
RTMP_PING=30
RTMP_PING_TIMEOUT=60

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
BCRYPT_ROUNDS=12

# File Cleanup
CLEANUP_INTERVAL_HOURS=24
FILE_TTL_HOURS=72